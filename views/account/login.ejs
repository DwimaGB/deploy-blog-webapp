

<div class="container-form-sm"> 
    <% if(messages){ %>
        <p class="text-danger">
            <%= messages.error %>
        </p>
        <% } %>
        
    <form action="/auth/login" method="POST">
            <%- include('_form_fields.ejs') %>
            <button class="btn btn-primary">Log In</button>
    </form>

    <div class="text-secondary mt-4">
        <hr>
    </div>

    <div class="card mt-4">
        <div class="card-body card-body-google text-center">
          <a class="d-flex gap-3 justify-content-center align-items-center btn btn-block" href="/auth/google" role="button">
            <figure class="social-icon">
                <img width="24" height="24" src="/images/google-icon.png" alt="Google Icon">
            </figure>
            <span class="h5">Sign In with Google</span>
          </a>
        </div>
      </div>
    </div>
</div>